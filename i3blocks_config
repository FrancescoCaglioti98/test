# i3blocks configuration

separator_block_width=15
markup=pango

[volume]
command=if pactl get-sink-mute @DEFAULT_SINK@ | grep -q 'yes'; then echo "ðŸ”‡ MUTE"; else echo "ðŸ”Š $(pactl get-sink-volume @DEFAULT_SINK@ | grep -Po '\d+(?=%)' | head -1)%"; fi
interval=1
signal=10

[memory]
command=echo "ðŸ’¾ $(free -h | awk '/^Mem:/ {print $3 "/" $2}')"
interval=5

[cpu]
command=echo "âš¡ $(top -bn1 | grep "Cpu(s)" | awk '{print $2}' | cut -d'%' -f1)%"
interval=2

[battery]
command=echo "ðŸ”‹ $(cat /sys/class/power_supply/BAT0/capacity 2>/dev/null || echo 'AC')%"
interval=30

[time]
command=echo "ðŸ“… $(date '+%Y-%m-%d %H:%M')"
interval=1
